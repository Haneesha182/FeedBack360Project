@model DLFeedBack360.ViewModel.UserDetailViewModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/MyLayout.cshtml";
}

<h1>Registration</h1>
<hr />
<div class="row">
    <div class="col-md-4 align-content-center">
        <form asp-action="Registration" style="background-color:chartreuse; border:solid;border-width:2px;width:100%;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Retype_Password" class="control-label"></label>
                <input asp-for="Retype_Password" class="form-control" />
                <span asp-validation-for="Retype_Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmpId" class="control-label"></label>
                <input asp-for="EmpId" class="form-control" />
                <span asp-validation-for="EmpId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                @*<input asp-for="Country" class="form-control" />*@
                <select asp-for="Country" asp-items=@(Model.CountryDetail != null? new SelectList(Model.CountryDetail,"CountryID","CountryName"):null)></select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
               @* <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>*@
                @for (var i = 0; i < Model.LanguageDetail.Count; i++)
                {
                    <input type="checkbox" asp-for="@Model.LanguageDetail[i].Selected" />
                    <label asp-for="@Model.LanguageDetail[i].Selected">@Model.LanguageDetail[i].LangName </label>
                    <input type="hidden" asp-for="@Model.LanguageDetail[i].LangID" />
                    <input type="hidden" asp-for="@Model.LanguageDetail[i].LangName" />
                }
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                @*<input asp-for="Role" class="form-control" />*@
                <select asp-for="Role" asp-items="@(new SelectList(Model.RoleDetail,"RoleID","RoleName"))"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <h4 style="color:chocolate">@{
                    @ViewBag.RegistrationStatus
                }</h4>
            </div>
        </form>
        <br />
    </div>
</div>

